@model HomePage
@{
    ViewData["Title"] = Model.TitlePage;
    ViewData["MetaDescription"] = Model.MetaDescription;
    ViewData["CanonicalURL"] = "http://www.shopikardemo.ir";
}
@section Schema{
    <vc:home-schema></vc:home-schema>

}
@section Style{
    <link href="~/dist/sass/pages/index.min.css" rel="stylesheet" />
}
@section JavaScript{
    <script async src="~/dist/js/pages/_index.min.js" type="module"></script>
}

<section class="position-relative uk-overflow-hidden">

    <!--Slide Show container-->
    <section class="position-relative" id="slideshow-container">
        <!--Slide show-->
        <vc:top-slider-image></vc:top-slider-image>
    </section>
    <!--Features Icons-->
    @await Html.PartialAsync(partialViewName: "_FeaturesIcons", model: Model)

    <!--Top categories-->
    <vc:home-category-list></vc:home-category-list>
    <!--Latest products-->
    <vc:latest-product-list></vc:latest-product-list>
    <!--Special Discount Products Slide Show-->
    <vc:home-special-discount></vc:home-special-discount>



</section>
<!--Home banners-->
<vc:home-banners></vc:home-banners>

<!--Top Sold Products-->
<vc:top-sell-product-list></vc:top-sell-product-list>

<!--Blog List-->
<vc:top-blog-list></vc:top-blog-list>

<!--Top Instagram Posts-->
@if (!string.IsNullOrWhiteSpace(Model.InstagramAPI))
{
    <section id="instagram-posts" class="uk-overflow-hidden position-relative product-slider margin-bottom-40 margin-top-35">
        <div class="title-and-slider-container position-relative uk-overflow-hidden">
            <!--Title of top blogs slider-->
            <div class="product-slider-title padding-x-10 margin-bottom-15" dir="rtl">
                <h2 class="dana-font fontsize-22 mobile-fontsize-20 xsmobile-fontsize-18
                    font-weight-600 margin-0">
                    Latest Instagram Posts
                </h2>

            </div>
            @Html.Raw(Model.InstagramAPI)
        </div>
    </section>
}


<!--Top Brands-->
<vc:top-brand-list></vc:top-brand-list>

<!--Website description-->
<section id="website-description" class="margin-top-20">
    <!--Title of website description-->
    <div class="website-description-content padding-x-10 margin-bottom-15 uk-text-center" dir="rtl">
        <h2 class="dana-font fontsize-22 mobile-fontsize-20 xsmobile-fontsize-18
                    font-weight-600 margin-0">
            About The Website
        </h2>
        <div class="dana-font fontsize-14 font-color-2 uk-text-center margin-top-15 margin-bottom-25" dir="rtl">
            @Html.Raw(Model.Description)
        </div>
    </div>
</section>


<!--alert for log in before action-->
<div id="login-alert-modal" uk-modal dir="ltr">
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>

        <div class="uk-modal-header border-bottom-grey">
            <span class="dana-font font-color-1 fontsize-16 font-weight-600">Added To Favorits</span>
        </div>
        <div class="uk-modal-body">
            <div class="uk-magin margin-y-20 dana-font font-weight-500 fontsize-16 mobile-fontsize-14 line-height-30 uk-text-left" dir="ltr">
                <span>To add to your favorit list, you must first</span>
                <a href="#login--modal" uk-toggle class="text-decoration-none main-color">login</a>
                <span>to your account or</span>
                <a href="#register--modal" uk-toggle class="text-decoration-none main-color">sign up</a>
                <span>if you have not yet registered</span>
            </div>

        </div>
    </div>
</div>