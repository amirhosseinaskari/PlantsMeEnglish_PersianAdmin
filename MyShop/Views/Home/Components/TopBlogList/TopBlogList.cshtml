@model IEnumerable<Blog>
@if (Model.Count() > 0)
{
 

   
    <!--Top Blogs-->
    <section id="top-blogs" class="uk-overflow-hidden product-slider">
        <div class="title-and-slider-container position-relative">
            <!--Title of top blogs slider-->
            <div class="product-slider-title padding-x-10 margin-bottom-15" dir="ltr">
                <h2 class="dana-font fontsize-22 mobile-fontsize-20 xsmobile-fontsize-18
                    font-weight-600 margin-0">
                    Latest Blogs
                </h2>
               
            </div>
            <!--Slides of top blogs slider-->
            <div class="uk-position-relative uk-visible-toggle uk-light padding-bottom-30 " tabindex="-1" uk-slider>
                <ul class="uk-slider-items uk-child-width-1-2 uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-grid">
                    @foreach (var item in Model)
                    {
                        var blogDate = item.CreatedDate.ToString("dddd dd MMMM yyyy");
                        <li class="">
                            <a asp-action="BlogDetail" asp-controller="Blog" asp-area="" asp-route-id="@item.BlogId" asp-route-blogTitle="@item.Title.Replace(" ","-")" class="d-block white h-100">
                                <div class="uk-card uk-card-default blog-card">
                                    <div class="uk-card-media-top">
                                        @if (!string.IsNullOrEmpty(item.CoverImage))
                                        {
                                            <img class="w-100 lazyload" src="~/images/base/placeholderimage.jpg"
                                                 data-src="/images/blogs/small/blog_@(item.BlogId)/@item.CoverImage"
                                                 alt="@item.Title" uk-img>
                                        }
                                        else
                                        {
                                            <img class="w-100" src="~/images/base/placeholderimage.jpg" />
                                        }

                                    </div>
                                    <div class="uk-card-body dana-font uk-text-justify padding-10" dir="ltr">
                                        <h3 class="uk-card-title fontsize-18 mobile-fontsize-16 font-weight-600 font-color-3 margin-bottom-0">@item.Title</h3>
                                        <p class="fontsize-14 font-weight-400 font-color-4 margin-top-10">
                                            @if (!string.IsNullOrWhiteSpace(item.SummaryDescription))
                                            {
                                                if (item.SummaryDescription.Length > 100)
                                                {
                                                    <text>@item.SummaryDescription.Substring(0, 100) ...</text>
                                                }
                                                else
                                                {
                                                    <text>@item.SummaryDescription</text>
                                                }
                                            }
                                            else
                                            {
                                                <text>Blog is compeleting</text>
                                            }
                                        </p>
                                    </div>
                                    <div class="blog-card__footer dana-font fontsize-12 font-color-3" dir="ltr">
                                       
                                        <div class="digit-format">
                                            <span uk-icon="icon:calendar"></span>
                                            @blogDate
                                        </div>
                                       
                                    </div>
                                </div>


                            </a>
                        </li>
                    }


                </ul>
                <!--top blogs slider arrow navigation-->
                <a class="uk-position-center-left uk-position-small  slide-navigation slide-navigation-left uk-box-shadow-small" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                <a class="uk-position-center-right uk-position-small  slide-navigation slide-navigation-right uk-box-shadow-small" href="#" uk-slidenav-next uk-slider-item="next"></a>
                <!--dot navigations of slider-->
                <ul class="uk-slider-nav uk-dotnav uk-flex-center margin-top-20 uk-visible@s"></ul>
                <div class="d-flex justify-content-center margin-top-25">
                    <a asp-action="BlogList" asp-controller="Blog" asp-area="" class="white-text text-decoration-none border-radius-3 dana-font black uk-button uk-button-default
                   fontsize-18 mobile-fontsize-16 xsmobile-fontsize-14 font-weight-500">All Blogs</a>
                </div>
            </div>
        </div>

    </section>
}
