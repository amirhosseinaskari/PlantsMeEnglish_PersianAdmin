<!DOCTYPE html>

<html>
<head>
    <meta name="robots" content="noindex">
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"]</title>
    <link href="~/css/finaladmincss.min.css" rel="stylesheet" />
    <script src="~/js/GoogleMaterialDesign.min.js"></script>
    <script>
        // Picture element HTML5 shiv
        document.createElement("picture");
    </script>
    <script src="~/js/picturefill.min.js" async></script>
</head>
<body class="m-0">
    <!--Jump to Top Button-->
    <a href="#" uk-scroll class="mdc-button mdc-button--unelevated bg--red-lighten-7
       uk-box-shadow-medium uk-border-circle d-sm-none"
       id="totop-button">
        <div class="mdc-button__ripple uk-border-circle"></div>
        <i class="material-icons-outlined mr-sm-2">
            expand_less
        </i>
    </a>
    <!--Top Menu-->
    <div class="back-fade"></div>
    <header class="container-fluid m-0 p-0">
        <nav id="top-menu" class="bg--white d-flex justify-content-start position-relative" dir="rtl">
            <div class="flex-shrink-0 flex-grow-0 d-flex align-items-center
                 justify-content-center border pr-4 opened" id="top-menu__title-container">
                <a href="~/En/Admin" class="uk-button uk-button-link purple-1 text-decoration-none d-block w-100">
                    <span class="mx-2" uk-icon="icon:settings"></span>
                    <span class="IRANSans fontsize-16 top-menu__title-container__title">
                        Dashboard
                    </span>
                </a>
            </div>
            <div class="d-flex justify-content-start align-items-center flex-grow-1 border border-right-0" dir="rtl">
                <!--Side-Menu Toggle Button-->
                <div class="top-menu__sidemenu-icon-container flex-shrink-0 text-center">
                    <button id="side-menu--controller" type="button"
                            class="uk-button uk-button-link grey-darken-1 text-decoration-none"
                            uk-icon="icon:menu;ration:1.3"></button>
                </div>

                <div class="top-menu__profile-information-container flex-shrink-0 flex-grow-1 flex-sm-grow-0 ml-2">

                    <button class="mdc-button mdc-button--unelevated bg--red-lighten-7 uk-box-shadow-medium"
                            id="help-button">
                        <div class="mdc-button__ripple"></div>
                        <span class="mdc-button__label IRANSans fontsize-16 d-none d-sm-inline">
                            Help
                        </span>
                        <i class="material-icons mr-sm-2">
                            help_outline
                        </i>
                    </button>
                    <!--Link go to landing page-->
                    <a class="text-decoration-none grey-darken-4" target="_blank"
                       asp-action="Index" asp-controller="Home" asp-area="">
                        <span class="mx-2" uk-icon="icon:home"></span>
                    </a>
                    <!--orders and comments notifications-->
                    <div class="uk-inline position-relative">
                        <vc:admin-notification></vc:admin-notification>
                    </div>
                    <!--messages notification-->
                    <div class="uk-inline position-relative">
                        <vc:messages-notification></vc:messages-notification>
                    </div>
                    <!--Sign out-->
                    <a class="text-decoration-none grey-darken-4"
                       asp-area="Identity" asp-page="/Account/Logout">
                        <span class="mx-2" uk-icon="icon:sign-out"></span>
                    </a>

                </div>
            </div>
        </nav>
    </header>
    <section class="container-fluid m-0 p-0 d-flex justify-content-lg-start
             overflow-hidden-horizantal position-relative" dir="rtl">

        <!--Side Menu-->
        <div class="position-relative flex-shrink-0 opened" id="side-menu-container" dir="ltr">

            <nav class="bg--white p-2 opened border-left" id="side-menu" uk-sticky>
                <!--Add new product-->
                <div class="text-center p-2 mt-2" dir="rtl">
                    <a asp-action="Index" asp-controller="Products" asp-area="Admin"
                       class="mdc-button mdc-button--unelevated bg--green-2 uk-box-shadow-medium text-decoration-none">
                        <div class="mdc-button__ripple"></div>
                        <span class="mdc-button__label IRANSans fontsize-14">
                           Add Product
                        </span>
                        <i class="material-icons-outlined mr-2 fontsize-18">
                            control_point
                        </i>
                    </a>
                </div>
                <!--List item of side nav-->
                <ul dir="rtl" id="side-menu__accordion" class="uk-list">
                    <!--Analytics-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["adminpage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Admin" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                timeline
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Reports</span>
                        </a>
                    </li>
                    <!--Orders-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["orderspage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Orders" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                local_mall
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Orders</span>
                        </a>
                    </li>
                    <!--Categories-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["categoriespage"] uk-border-rounded">
                        <a asp-action="CreateCategory" asp-controller="Category" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                category
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Categories</span>
                        </a>
                    </li>
                    <!--Brands-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["brandspage"] uk-border-rounded">
                        <a asp-action="CreateBrand" asp-controller="Brands" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                brightness_auto
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Brands</span>
                        </a>
                    </li>
                    <!--Products-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["productspage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Products" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                assignment
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Products</span>
                        </a>
                    </li>
                    <!--Product Delivery-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["deliverypage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Delivery" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <span class="material-icons-outlined fontsize-18">
                                local_shipping
                            </span>
                            <span class="mr-2 IRANSans fontsize-12">Shipment</span>
                        </a>
                    </li>
                    <!--Discounts-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["discountpage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Discount" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                local_offer
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Discounts</span>
                        </a>
                    </li>
                    <!--Special Discount-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["specialdiscountpage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="SpecialDiscount" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <span class="material-icons-outlined fontsize-18">
                                card_giftcard
                            </span>
                            <span class="mr-2 IRANSans fontsize-12">Special Offers</span>
                        </a>
                    </li>
                    <!--Blogs-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["blogpage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Blog" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                dvr
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Blogs</span>
                        </a>
                    </li>
                    <!--Users-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["customerpage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Customer" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                group
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Customers</span>
                        </a>
                    </li>

                    <!--Comments-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["commentspage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Comments" asp-area="Admin"
                           class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                sms
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">کامنت ها</span>
                        </a>
                    </li>
                    <!--Mails-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["ticketspage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="Messages" asp-area="Admin" class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                mail
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Messages</span>
                        </a>
                    </li>
                    <!--Ohter settings-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2" uk-accordion>
                        <ul uk-accordion class="mt-0">
                            <li>
                                <a class="uk-accordion-title has-sub-items d-flex align-items-center grey-darken-4" href="#">
                                    <i class="material-icons-outlined fontsize-18">
                                        library_books
                                    </i>
                                    <span class="mr-2 IRANSans fontsize-12">Other Setings</span>
                                </a>
                                <!--Pages list-->
                                <div class="uk-accordion-content accordion__list-item__sub-list">
                                    <ul class="uk-list IRANSans_Light fontsize-12 px-1 m-0">
                                        <!--Home page-->
                                        <li class="sub-list__list-item">
                                            <a asp-action="HomePage" asp-controller="HomePage" asp-area="Admin">Home Page</a>
                                        </li>
                                        <!--contact us page-->
                                        <li class="sub-list__list-item">
                                            <a asp-action="Index" asp-controller="ContactUs" asp-area="Admin">Contact Us Page</a>
                                        </li>
                                        <!--About us page-->
                                        <li class="sub-list__list-item">
                                            <a asp-action="Index" asp-controller="AboutUs" asp-area="Admin">About Us Page</a>
                                        </li>
                                        <!--FAQ page-->
                                        <li class="sub-list__list-item">
                                            <a asp-action="Index" asp-controller="FAQ" asp-area="Admin">FAQ Page</a>
                                        </li>
                                        <!--Terms page-->
                                        <li class="sub-list__list-item">
                                            <a asp-action="Index" asp-controller="Terms" asp-area="Admin">Terms Page</a>
                                        </li>

                                        <!--Banner Management-->
                                        <li class="sub-list__list-item">
                                            <a asp-action="Index" asp-controller="BannerManagement" asp-area="Admin">مدیریت بنرها</a>
                                        </li>


                                    </ul>
                                </div>
                            </li>
                        </ul>
                    </li>
                    <!--SEO Settings-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["seosettingspage"] uk-border-rounded">
                        <a asp-action="Index" asp-controller="SEO" asp-area="Admin" class="uk-accordion-title d-flex align-items-center grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                trending_up
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">SEO Settings</span>
                        </a>
                    </li>
                    <!--Web site notification-->
                    <li class="uk-text-justify px-3 py-1 side-menu__accordion__list-item mt-2 @ViewData["notificationpage"] uk-border-rounded">
                        <a asp-action="Notification" asp-controller="Notification" asp-area="Admin"
                           class="uk-accordion-title
                           d-flex align-items-center
                           grey-darken-4 text-decoration-none">
                            <i class="material-icons-outlined fontsize-18">
                                info
                            </i>
                            <span class="mr-2 IRANSans fontsize-12">Web Notification</span>
                        </a>
                    </li>


                </ul>
            </nav>
        </div>

        <!--Main Content-->
        <main class="bg--light-2 flex-grow-1 flex-shrink-1 container-fluid mb-3">
            @RenderBody()
        </main>
    </section>
    <!--Footer-->
    <footer class="position-relative">
        <div class="bg--grey-darken-4 d-flex align-items-center justify-content-center" id="footer-bar">
            <span class="IRANSans fontsize-14 white"> Dashboard</span>
        </div>
    </footer>
    <div role="progressbar" id="progress-loader"
         class="mdc-linear-progress mdc-linear-progress--indeterminate position-fixed w-100 d-none"
         aria-label="Example Progress Bar"
         aria-valuemin="0" aria-valuemax="1" aria-valuenow="0">
        <div class="mdc-linear-progress__buffer">
            <div class="mdc-linear-progress__buffer-bar"></div>
            <div class="mdc-linear-progress__buffer-dots"></div>
        </div>
        <div class="mdc-linear-progress__bar mdc-linear-progress__primary-bar">
            <span class="mdc-linear-progress__bar-inner"></span>
        </div>
        <div class="mdc-linear-progress__bar mdc-linear-progress__secondary-bar">
            <span class="mdc-linear-progress__bar-inner"></span>
        </div>
    </div>




    <script src="~/js/Admin/finaladminjs.js"></script>
    <script src="~/js/Admin/mainadminjs.min.js" async></script>

    @RenderSection("Scripts", false)
    <script>

    </script>
    @{
        int messageCode = -1;
        if (Context.Session.GetInt32("Message") != null)
        {
            messageCode = (int)Context.Session.GetInt32("Message");
        }

    }
    @switch (messageCode)
    {
        case (int)Messages.CategoryCreatedSuccessfully:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Category Added</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.EditedSuccessfully:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Changes Saved</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.DeletedSuccessfully:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">The Itme Removed</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.ErrorCreateProduct:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Error in Product Creation</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.EditedWithError:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Error</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.AddedTextSuccessfully:
            <script>
                window.location.hash = "#product-description-content-list";
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Text Added</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.AddedImageSuccessfully:
            <script>
                window.location.hash = "#product-description-content-list";
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Image Added</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.DeletedContentSuccessfully:
            <script>
                window.location.hash = "#product-description-content-list";
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Content Removed</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.ErrorCreateDiscount:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Error</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.SpecialDiscountCreatedSuccessfully:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Special Offer Added</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        case (int)Messages.ErrorCreateBlog:
            <script>
                UIkit.notification({
                    message: '<span class="material-icons-outlined red-lighten-7 mx-2 position-relative" style="top:6px">notifications_active</span><span class="IRANSans_Light fontsize-14" dir="rtl">Error</span>',
                    status: 'primary',
                    pos: 'top-center',
                    timeout: 5000
                });
            </script>
            Context.Session.Clear();
            break;
        default:
            break;
    }

    @if (!string.IsNullOrEmpty(Context.Session.GetString("JumpTarget")))
    {

        <script>
            window.location.hash = "#product-description-content-list";
        </script>
    }
    <script>
        
        (async () => {
            if ('loading' in HTMLImageElement.prototype) {
                const images = document.querySelectorAll("img.lazyload");
                images.forEach(img => {
                    img.src = img.dataset.src;
                });
            } else {
                // Dynamically import the LazySizes library
                const lazySizesLib = await import('/js/lazysizes.min.js');
                // Initiate LazySizes (reads data-src & class=lazyload)
                lazySizes.init(); // lazySizes works off a global.
            }
        })();
    </script>
</body>
</html>
