@page "/Account/Login"
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
@section Style{
    <link href="~/dist/sass/pages/_account.min.css" rel="stylesheet" />
}
<!--Login form-->
<section class="d-flex uk-box-shadow-small padding-20 white uk-border-rounded margin-x-10">
    <div class="uk-border-rounded w-100">
        <div class="text-center margin-y-20">
            <strong class="font-weight-500 dana-font xsmobile-fontsize-16
                                fontsize-18 text-center margin-0">Login to Account</strong>
            <div class="uk-text-center margin-top-10" dir="ltr">
                <span class="dana-font fontsize-16 xsmobile-fontsize-14">Not Registered Yet?</span>
                <a asp-area="Identity" asp-page="/Account/Register" uk-toggle class="main-color text-decoration-none
                           dana-font border-bottom--red--dashed py-1 fontsize-16 xsmobile-fontsize-14">Sign Up</a>
            </div>

        </div>
        <div class="d-flex justify-content-center" dir="ltr">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-100 login-form">
                <div asp-validation-summary="All" class="red-text dana-font fontsize-12 line-height-25
                     uk-text-left uk-border-rounded" dir="ltr">
                    <div class="validation-errors-header uk-text-left dana-font fontsize-14 mobile-fontsize-12 white-text">Errors</div>
                </div>
                <div class="uk-margin w-100 modal-input-container" dir="ltr">
                    <div class="uk-inline w-100" dir="ltr">
                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                        <input type="tel" class="uk-input dana-font fontsize-14 xsmobile-fontsize-12 w-100"
                               asp-for="Input.Mobile" placeholder="Enter your phone number">
                    </div>
                    <span asp-validation-for="Input.Mobile" class="red-text font-weight-500 dana-font fontsize-12"></span>
                </div>
                <div class="uk-margin w-100 mb-0 modal-input-container" dir="ltr">
                    <div class="uk-inline w-100" dir="ltr">
                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                        <a href="#" class="uk-form-icon uk-form-icon-flip text-decoration-none visible-password-icon" uk-tooltip="title:show password">
                            <img data-second-src="/images/icons/visibility_off.svg" width="18" src="~/images/icons/visibility.svg" />
                        </a>
                        <input type="password" class="uk-input dana-font fontsize-14 xsmobile-fontsize-12 w-100"
                               asp-for="Input.Password" placeholder="Enter your password">
                    </div>
                    <span asp-validation-for="Input.Password"
                          class="red-text dana-font fontsize-12 font-weight-500"></span>
                    <div class="margin-y-10">
                        <a asp-area="Identity" asp-page="/Account/ForgotPassword"
                           asp-route-returnUrl="@Model.ReturnUrl"
                           class="dana-font font-weight-500 fontsize-14 xsmobile-fontsize-12 main-color border-bottom--red--dashed
                                       text-decoration-none py-1"> Forgot password?</a>
                    </div>
                </div>
                <div class="margin-top-40" dir="ltr">
                    <label class="d-flex justify-content-first align-items-center checkbox-type-a ripple-input">
                        <input class="uk-checkbox" type="checkbox" asp-for="Input.RememberMe" checked>
                        <span class="dana-font font-weight-400 fontsize-14  xsmobile-fontsize-12 font-color-2 margin-x-10">Remember Me</span>
                    </label>
                </div>
                <button class=" login--button w-100 wave-button black border-radius-3
                                    submit-button margin-top-20">
                    <span class="dana-font fontsize-16  xsmobile-fontsize-14 font-weight-500">Login</span>
                </button>
            </form>
        </div>
    </div>
</section>
@section JavaScript {
    <script src="~/dist/js/pages/_account.min.js" type="module"></script>
}
