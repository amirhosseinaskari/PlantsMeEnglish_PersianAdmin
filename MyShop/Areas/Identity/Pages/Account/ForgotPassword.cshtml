@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}

@section Style{
    <link href="~/dist/sass/pages/_account.min.css" rel="stylesheet" />
}
<!--Forgot password form-->
<section class="d-flex uk-box-shadow-small padding-20 white uk-border-rounded margin-x-10">
    <div class="uk-border-rounded w-100">
        <div class="text-center margin-y-20">
            <strong class="font-weight-500 dana-font xsmobile-fontsize-14
                                fontsize-16 text-center margin-0">Reset Password</strong>
            <div class="uk-text-center margin-top-10" dir="ltr">
                <span class="dana-font fontsize-14 xsmobile-fontsize-12">Not Registered Yet?</span>
                <a asp-area="Identity" asp-page="/Account/Register" asp-route-returnUrl="@Model.ReturnUrl" class="main-color text-decoration-none
                           dana-font border-bottom--red--dashed py-1 fontsize-14 xsmobile-fontsize-12">Sign Up</a>
            </div>

        </div>
        <div class="d-flex justify-content-center" dir="ltr">
            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-100">
                <div asp-validation-summary="All" class="red-text dana-font fontsize-12 line-height-25
                     text-left uk-border-rounded" dir="ltr">
                    <div class="validation-errors-header uk-text-left dana-font fontsize-14 mobile-fontsize-12 white-text">Errors</div>
                </div>
                <div class="uk-margin w-100" dir="ltr">
                    <div class="uk-inline w-100" dir="ltr">
                        <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: phone"></span>
                        <input asp-for="Input.Mobile" class="uk-input digit-format dana-font type-number
                               fontsize-14 xsmobile-fontsize-12 w-100 uk-border-rounded" type="tel" placeholder="Enter your mobile number">

                    </div>
                    <span asp-validation-for="Input.Mobile" class="red-text dana-font fontsize-12"></span>
                </div>
               
                <button class="w-100 login--button uk-box-shadow-medium wave-button black border-radius-3
                                    submit-button margin-y-20 padding-x-15">
                    <span class="dana-font fontsize-14  xsmobile-fontsize-12 font-weight-500">Reset Password</span>
                </button>
            </form>
        </div>
    </div>
</section>
@section JavaScript {
    <script src="~/dist/js/pages/_account.min.js" type="module"></script>
}
