@page
@model ResendVerificationCode
@{
    ViewData["Title"] = "Error";
}

@section Style{
    <link href="~/dist/sass/pages/_account.min.css" rel="stylesheet" />
}
<!--Login form-->
<section class="d-flex uk-box-shadow-small padding-20 white uk-border-rounded margin-x-10">
    <div class="uk-border-rounded w-100">
        <div class="text-center margin-y-20">
            <strong class="font-weight-500 dana-font xsmobile-fontsize-14
                                fontsize-16 text-center margin-0">Error sending activation code</strong>

        </div>
        <div class="d-flex justify-content-center align-items-center flex-column h-100 margin-top-10" dir="ltr">
            <div asp-validation-summary="All" class="red-text dana-font fontsize-12 line-height-25 w-100
                     text-left uk-border-rounded" dir="ltr">
                <div class="validation-errors-header uk-text-left dana-font fontsize-14 mobile-fontsize-12 white-text">Errors</div>
            </div>
            <div class="d-flex justify-content-center align-items-center margin-top-10">
                <a asp-area="Identity" asp-page="Register" asp-route-returnUrl="@Model.ReturnUrl" class="red-text border-bottom--red--dashed text-decoration-none dana-font padding-y-10 fontsize-14 margin-y-10">Return to register page</a>
                &nbsp; | &nbsp;
                <a asp-area="Identity" asp-route-returnUrl="@Model.ReturnUrl" asp-page="/Account/Login" class="red-text border-bottom--red--dashed text-decoration-none dana-font padding-y-10 fontsize-14 margin-y-10">Return to login page</a>
            </div>
        </div>
    </div>
</section>
@section JavaScript {
    <script src="~/dist/js/pages/_account.js" type="module"></script>
}

