@model IEnumerable<CategoryTitleDropDown>
@if (Model.Count() < 1)
{
    
    <li class="mdc-list-item mdc-list-item--selected" data-value="-1" role="option">
        دسته بندی ای ایجاد نشده است
    </li>
}
else if (Model.Where(c => c.Selected).FirstOrDefault() == null)
{
    <li class="mdc-list-item mdc-list-item--selected" data-value="-1" role="option">
        دسته بندی اصلی
    </li>
    @foreach (var item in Model)
    {

        <li class="mdc-list-item" data-value="@item.Id" role="option">
            @item.Title
        </li>


    }
}
else
{
    <li class="mdc-list-item" data-value="-1" role="option">
        دسته بندی اصلی
    </li>
    @foreach (var item in Model)
    {
        if (item.Selected)
        {
            <li class="mdc-list-item mdc-list-item--selected" data-value="@item.Id" role="option">
                @item.Title
            </li>

            continue;
        }

        <li class="mdc-list-item" data-value="@item.Id" role="option">
            @item.Title
        </li>


    }

}
