@model IEnumerable<City>
@if (Model.Count() > 0)
{
    <div class="uk-overflow-auto bg--white d-flex scroll-hidden">
        <table class="uk-table uk-table-striped uk-table-hover border">
            <thead class="IRANSans fontsize-12">
                <tr>
                    <th class="text-center fontsize-12">شهر</th>
                    <th class="text-center fontsize-12">هزینه ارسال</th>
                    <th class="text-center fontsize-12">عملیات</th>
                </tr>
            </thead>
            <tbody class="IRANSans_Light fontsize-12">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center fontsize-12">@item.Title</td>
                        <td class="text-center fontsize-12">@item.DeliveryPrice</td>
                        <td class="text-center fontsize-12">
                            <a href="#" class="delete-city-price-delivery-icon red-lighten-7" data-id="@item.Id"
                               uk-tooltip="title:حذف">
                                <span uk-icon="icon:trash;ratio:.85"></span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


