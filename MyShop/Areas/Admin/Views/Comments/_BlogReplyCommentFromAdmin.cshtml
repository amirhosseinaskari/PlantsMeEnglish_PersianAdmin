@model BlogReplyComment
@{ 
    var persianDate = new PersianCalendar();
    string submitDate = null;
    if (Model.SubmitedDate != null)
    {
        submitDate = string.Format("{0}/{1}/{2}", persianDate.GetYear(Model.SubmitedDate),
        persianDate.GetMonth(Model.SubmitedDate),
        persianDate.GetDayOfMonth(Model.SubmitedDate));
    }
}
    <div class="uk-box-shadow-medium admin-comment-box IRANSans_Light fontsize-12 my-2 reply-comment-box" data-id="@Model.Id">
        <div class="d-flex justify-content-between flex-wrap text-right iranyekanwebregular fontsize-10 border-bottom w-100 pb-2">

            <span>@Model.FullName</span>
            <span class="uk-text-muted">@submitDate</span>
        </div>
        <div class="py-2">
            <p>@Model.Description</p>

        </div>
        <div class="d-flex align-items-center justify-content-start comment-actions w-100 pt-2">
            <a href="#" data-id="@Model.Id" data-publish="@Model.IsPublished" class="blog-reply-comment-publish" uk-tooltip="title:انتشار">
                @if (Model.IsPublished)
                {
                    <i class="material-icons-outlined fontsize-16">
                        visibility
                    </i>
                }
                else
                {
                    <i class="material-icons-outlined fontsize-16">
                        visibility_off
                    </i>
                }
            </a>

            <a href="#" data-id="@Model.Id" class="blog-delete-reply-comment" uk-tooltip="title:حذف">
                <span uk-icon="icon:trash;ratio:.7"></span>
            </a>
        </div>
    </div>