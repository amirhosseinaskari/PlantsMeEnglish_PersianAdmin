@model IEnumerable<Category>
<!--Breadcrumb for this url-->
<div class="row p-0 m-0  py-2 mb-3 position-relative">
    <div class="col-12" dir="rtl">
        <ul class="uk-breadcrumb IRANSans_Light fontsize-12 text-right p-0 m-0 d-flex" dir="rtl">
            @if (Model.Count() == 0)
            {
                <li>
                    <a class="fontsize-12" href="/Admin/Category/CreateCategory">دسته بندی های اصلی</a>
                </li>
            }
            else
            {
                <li>
                    <a class="fontsize-12" href="/Admin/Category/CreateCategory">دسته بندی های اصلی</a>
                </li>
                @foreach (var item in Model)
                {
                    <li>
                        <a class="fontsize-12" asp-area="Admin" asp-controller="Category"
                           asp-action="CreateCategory" asp-route-id="@item.CategoryId">@item.Title</a>
                    </li>
                }
            }
            <li class="mx-1 uk-active">@ViewData["CategoryTitle"]</li>
        </ul>
       
    </div>

</div>
